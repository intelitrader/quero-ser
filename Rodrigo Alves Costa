        public int cem=0;
        public int cinquenta=0;
        public int vinte=0;
        public int dez=0;
        public int cinco=0;
        public int dois=0;
        public int um=0;
        public int cinquentac=0;
        public int vintecinco=0;
        public int dezc=0;
        public int cincoc=0;
        public int umc=0;
        private void Form1_Load(object sender, EventArgs e)
