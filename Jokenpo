        private void Jokenpo_Click(object sender, EventArgs e)
        {
            Jokenpo.Enabled = false;
            Pedra1.Enabled = true;
            Papel1.Enabled = true;
            Tesoura1.Enabled = true;

            if (a == b)
            {
                MessageBox.Show("empate");
            }
            else
            {
                if (a == 1 && b == 2)
                {
                    MessageBox.Show("B ganhou");
                }
                else
                {
                    if (a == 1 && b == 3)
                    {
                        MessageBox.Show("A ganhou");
                    }
                    else
                    {
                        if(a==2 && b == 1)
                        {
                            MessageBox.Show("A ganhou");
                        }
                        else
                        {
                            if(a==2 && b == 3)
                            {
                                MessageBox.Show("B ganhou");
                            }
                            else
                            {
                                if(a==3 && b == 1)
                                {
                                    MessageBox.Show("B ganhou");
                                }
                                else
                                {
                                    MessageBox.Show("A ganhou");
                                }
                            }
                        }
                    }

                }
            }

        }

